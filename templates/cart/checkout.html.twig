{% extends 'base2.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1>Checkout</h1>

        {% if cart is empty %}
            <p>Your cart is empty.</p>
        {% else %}
            <table class="table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Price</th>
                </tr>
                </thead>
                <tbody>
                {% for book in cart %}
                    <tr>
                        <td>{{ book.titre }}</td>
                        <td>{{ book.editeur }}</td>
                        <td>{{ book.prix }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <div class="d-flex justify-content-end">
                <a href="{{ path('app_books') }}" class="btn btn-secondary">Continue Shopping</a>
                <button class="btn btn-success">Confirm Order</button>
            </div>
        {% endif %}
    </div>
{% endblock %}
