{% extends 'base.html.twig' %}

{% block title %}Espace Admin : les livres{% endblock %}

{% block body %}

    <h1>Liste des livres</h1>
    <table class="table">
        <tr>
            <th>Titre</th>
            <th>Editeur</th>
            <th>Date Edition</th>
            <th>Prix</th>
            <th>Catégorie</th>
            <th colspan="3">Action</th>
        </tr>
        {% for livre in livres  %}
            <tr>
                <td>{{ livre.titre }}</td>
                <td>{{ livre.editeur }}</td>
                <td>{{ livre.dateEdition|date("d-m-Y") }}</td>
                <td>{{ livre.prix }}</td>
                <td>{{ livre.cat.libelle }}</td>
                <td><a class="btn btn-primary" href="{{ path('app_livres_show',{'id':livre.id})}}">Voir détail..</a></td>
                <td><a class="btn btn-danger" href="{{ path('app_livres_delete',{'id':livre.id})}}">Supprimer</a></td>
                <td><a class="btn btn-success" href="{{ path('app_livres_edit', {'id': livre.id}) }}">Editer</a></td>

            </tr>
        {% endfor %}

    </table>
    <div class="navigation rigel">
        {{ knp_pagination_render(livres) }}
    </div>

    <a href="{{ path('app_livres_create') }}" class="btn btn-primary right-align">Ajouter un nouveau livre</a>


{% endblock %}
