{% extends 'base2.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <!-- Search and Category Filter Form -->
        <div class="mb-4">
            <form action="{{ path('app_books') }}" method="get" class="d-flex justify-content-between">
                <input type="text" class="form-control w-75" name="search" placeholder="Search for books" value="{{ search }}">
                <select class="form-select w-25" name="category">
                    <option value="" disabled selected>Category</option>

                </select>
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>

        <!-- Recommended Books Section -->
        <div class="mb-4">
            <h3>Recommended</h3>
            <div class="row">
                {% for book in recommendedBooks %}
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="{{ book.image }}" class="card-img-top" alt="Book image">
                            <div class="card-body">
                                <h5 class="card-title">{{ book.titre }}</h5>
                                <p class="card-text">By {{ book.editeur }}</p>
                                <p class="card-text"><strong>{{ book.cat.libelle }}</strong></p>
                                <p class="card-text">Status: <span class="badge bg-primary">Recommended</span></p>
                                <a href="{{ path('app_books_show', {'id': book.id}) }}" class="btn btn-info">View Details</a>
                                <a href="{{ path('app_books_add_to_cart', {'id': book.id}) }}" class="btn btn-success">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Recently Added Books Section -->
        <div class="mb-4">
            <h3>Recently Added</h3>
            <div class="row">
                {% for book in recentlyAddedBooks %}
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="{{ book.image }}" class="card-img-top" alt="Book image">
                            <div class="card-body">
                                <h5 class="card-title">{{ book.titre }}</h5>
                                <p class="card-text">By {{ book.editeur }}</p>
                                <p class="card-text"><strong>{{ book.cat.libelle }}</strong></p>
                                <p class="card-text">Status: <span class="badge bg-primary">Recently Added</span></p>
                                <a href="{{ path('app_books_show', {'id': book.id}) }}" class="btn btn-info">View Details</a>
                                <a href="{{ path('app_books_add_to_cart', {'id': book.id}) }}" class="btn btn-success">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
{% endblock %}
